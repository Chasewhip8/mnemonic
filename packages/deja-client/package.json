{
  "name": "deja-client",
  "version": "0.1.0",
  "description": "Thin client for deja - persistent memory for agents",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "bun run lint && bun run test && bun run build"
  },
  "keywords": [
    "ai",
    "agents",
    "memory",
    "llm",
    "cloudflare",
    "deja"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/acoyfellow/deja"
  },
  "homepage": "https://deja.coey.dev",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "effect": "^3.19.0",
    "@effect/platform": "^0.94.0"
  }
}
