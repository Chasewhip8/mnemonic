{
  "name": "deja",
  "version": "0.1.0",
  "description": "Persistent memory for agents",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:marketing": "cd marketing && bun run dev",
    "build": "cd marketing && bun run build",
    "deploy": "bun run build && wrangler deploy",
    "db:init": "wrangler d1 execute deja-db --file=schema.sql --remote",
    "test": "jest",
    "test:do": "jest test/deja-do.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "agents",
    "memory",
    "cloudflare",
    "workers"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260131.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.4.0",
    "wrangler": "^4.61.1"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7"
  }
}
