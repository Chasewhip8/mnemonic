{
	"name": "mnemonic",
	"version": "0.1.0",
	"description": "Persistent memory for agents",
	"main": "src/index.ts",
	"scripts": {
		"human:dev": "bun run src/index.ts --watch",
		"start": "bun run src/index.ts",
		"prepare": "command -v effect-language-service >/dev/null 2>&1 && effect-language-service patch || true",
		"db:generate": "drizzle-kit generate --config src/database/drizzle.config.ts",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"test": "bun test",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"ai",
		"agents",
		"memory",
		"cloudflare",
		"workers"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@effect/language-service": "^0.75.1",
		"@effect/vitest": "^0.20.0",
		"@types/node": "^25.1.0",
		"drizzle-kit": "^0.31.4",
		"effect-solutions": "^0.4.13",
		"gateproof": "^0.2.2",
		"typescript": "^5.4.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@effect/cluster": "^0.56.4",
		"@effect/experimental": "^0.44.0",
		"@effect/platform": "^0.94.5",
		"@effect/platform-bun": "^0.62.0",
		"@effect/sql": "^0.30.0",
		"@effect/sql-drizzle": "^0.26.0",
		"@effect/sql-libsql": "^0.30.0",
		"@huggingface/transformers": "^3.8.1",
		"@libsql/client": "^0.17.0",
		"drizzle-orm": "^0.45.1",
		"effect": "^3.19.19"
	},
	"optionalDependencies": {
		"sharp": "^0.34.5"
	}
}
