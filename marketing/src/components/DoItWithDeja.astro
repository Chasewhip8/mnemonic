---
interface Props {
  blurb: string;
  snippets: { label?: string; code: string }[];
  showDocsLink?: boolean;
}

const { blurb, snippets, showDocsLink = true } = Astro.props;
---

<h2 id="do-it-with-deja">Do it with deja</h2>
<p class="mb-4">{blurb}</p>
<div class="space-y-4">
  {snippets.map(({ label, code }) => (
    <div>
      {label && <p class="font-mono text-[10px] text-brass/80 uppercase tracking-wider mb-2">{label}</p>}
      <pre class="code-block bg-void-deep border border-brass/10 rounded-sm p-4 font-mono text-xs leading-relaxed text-chrome-dark overflow-x-auto shadow-code whitespace-pre-wrap">{code}</pre>
    </div>
  ))}
</div>
{showDocsLink && (
  <p class="mt-4 font-serif text-sm text-chrome-dark/70">
    See <a href="/docs" class="text-brass hover:underline">Docs</a> for full API.
  </p>
)}
